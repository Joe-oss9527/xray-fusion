{
  "metadata": {
    "id": "server",
    "name": "Production Server",
    "description": "Production-grade configuration with strict security and high performance",
    "category": "production",
    "author": "xray-fusion",
    "version": "1.0.0",
    "min_xray_version": "v1.8.0"
  },
  "config": {
    "topology": "vision-reality",
    "xray": {
      "version": "latest",
      "vision_port": 8443,
      "reality_port": 443,
      "fallback_port": 8080,
      "sni": "www.apple.com,www.icloud.com",
      "reality_dest": "www.apple.com:443",
      "sniffing": true
    },
    "plugins": [
      "cert-auto",
      "firewall",
      "monitoring"
    ],
    "security": {
      "level": "strict",
      "features": {
        "tls13_only": true,
        "cert_pinning": true,
        "firewall_rules": true,
        "rate_limiting": true,
        "connection_limits": true
      }
    },
    "performance": {
      "max_connections": 2000,
      "buffer_size": "xlarge",
      "tcp_optimization": true
    }
  },
  "requirements": [
    "Domain ownership required",
    "Production-grade server (2+ CPU cores, 4GB+ RAM)",
    "Ports 443, 8443, 8080 must be available",
    "Systemd for service management",
    "Firewall (iptables/nftables) recommended"
  ],
  "notes": [
    "Suitable for 50+ concurrent users",
    "Requires dedicated server",
    "Strict security settings",
    "Production-grade performance tuning",
    "Comprehensive monitoring enabled"
  ]
}
